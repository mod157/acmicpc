package step4;
/*
 * 4´Ü°è No.1546 Æò±Õ
 */

import java.util.Scanner;

public class No_4 {
	public static void main(String args[]){
		Scanner scan = new Scanner(System.in);
		int a = scan.nextInt();
		int sum = 0;
		for(int i = 0; i < a; i++) {
			int val = scan.nextInt();
			sum += val;
		}
		System.out.printf("%.2f",sum/a);
	}
}
